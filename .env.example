# 数据库配置
# MongoDB连接字符串 - 优先级最高
MONGO_URL=mongodb://localhost:27017/taiwan_pk10

# Railway部署相关（如果使用Railway部署）
RAILWAY_ENVIRONMENT=production
DATABASE_URL=mongodb://localhost:27017/taiwan_pk10
RAILWAY_TCP_PROXY_DOMAIN=
RAILWAY_TCP_PROXY_PORT=

# 服务器配置
PORT=3000
NODE_ENV=development

# API配置
API_BASE_URL=http://localhost:3000
API_TIMEOUT=30000

# 抓取配置
SCRAPING_HEADLESS=true
SCRAPING_MAX_PAGES=5
SCRAPING_TIMEOUT=30000
SCRAPING_INTERVAL=30

# 日志配置
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_RETENTION_DAYS=7

# 错误处理配置
MAX_ERROR_THRESHOLD=10
ERROR_WINDOW_MINUTES=60

# 调度配置
ENABLE_SCHEDULER=true
CLEANUP_HOUR=2
API_SYNC_INTERVAL=60

# 性能监控
ENABLE_PERFORMANCE_MONITORING=true
SLOW_OPERATION_THRESHOLD=30.0

# 数据验证
ENABLE_DATA_VALIDATION=true
MIN_RECORDS_PER_DAY=10
MAX_RECORDS_PER_DAY=1000

# Chrome WebDriver配置（可选）
CHROME_BINARY_PATH=
CHROMEDRIVER_PATH=

# 代理配置（可选）
HTTP_PROXY=
HTTPS_PROXY=

# 通知配置（可选）
NOTIFICATION_WEBHOOK_URL=
NOTIFICATION_EMAIL=

# 安全配置
JWT_SECRET=your_jwt_secret_here
API_KEY=your_api_key_here

# 调试配置
DEBUG=false
VERBOSE_LOGGING=false