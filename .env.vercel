# Vercel环境变量配置文件
# 请在Vercel Dashboard中设置这些环境变量

# MongoDB连接配置
# 推荐使用MongoDB Atlas云数据库
MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/taiwan_pk10?retryWrites=true&w=majority
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/taiwan_pk10?retryWrites=true&w=majority

# 数据库名称
DB_NAME=taiwan_pk10

# 应用配置
NODE_ENV=production
PORT=3000

# 抓取配置
SCRAPE_INTERVAL=75000
SCRAPE_START_HOUR=7
SCRAPE_END_HOUR=24

# 数据保存配置
MAX_RECORDS_PER_FILE=1000
DATA_BACKUP_ENABLED=true

# 日志配置
LOG_LEVEL=info
LOG_TO_FILE=false

# API配置
API_RATE_LIMIT=100
API_TIMEOUT=30000

# 错误处理配置
ERROR_RETRY_COUNT=3
ERROR_RETRY_DELAY=5000

# 时区配置
TZ=Asia/Taipei

# Vercel特定配置
VERCEL_ENV=production
VERCEL_REGION=hkg1

# 缓存配置
CACHE_TTL=60
CACHE_ENABLED=true

# 安全配置
CORS_ORIGIN=*
API_KEY_REQUIRED=false

# 数据源配置
DATA_SOURCE_URL=https://www.twlottery.net
BACKUP_DATA_SOURCE=https://backup.twlottery.net

# 监控配置
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# Python配置
PYTHON_VERSION=3.9
PIP_CACHE_DIR=/tmp/pip-cache